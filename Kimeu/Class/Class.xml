<UserControl x:Class="sgs.Views.Class"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sgs.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="WhiteSmoke">
        <TextBlock Text="Add Classes" HorizontalAlignment="Center" Margin="0,42,0,381" FontSize="17" Width="96"></TextBlock>
        <TextBox x:Name="txtClassHteacher" HorizontalAlignment="Left" Margin="75,124,0,0" TextWrapping="Wrap" TextAlignment="Center" FontSize="13"  Text="" VerticalAlignment="Top" Width="230" Height="32"/>
        <Label Content="Head Teacher" HorizontalAlignment="Left" Margin="75,97,0,0" FontSize="13" VerticalAlignment="Top" RenderTransformOrigin="0.484,2.404" Width="87"/>
        <ComboBox x:Name="cmbClevel" HorizontalAlignment="Left" Margin="75,172,0,0" VerticalAlignment="Top" Width="230">
            <ComboBoxItem Content="Grade One"/>
            <ComboBoxItem Content="Grade Two"/>
            <ComboBoxItem Content="Grade Three"/>
            <ComboBoxItem Content="Grade Four"/>
            <ComboBoxItem Content="Grade Five"/>
            <ComboBoxItem Content="Grade Six"/>
        </ComboBox>
        <Button x:Name="btnAddClass" Content="Add Class" HorizontalAlignment="Left" Margin="75,225,0,0" VerticalAlignment="Top" Width="230" Height="37" Click="btnAddClass_Click"/>
        <DataGrid x:Name="dgClass" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,306,10,10"/>
        <TextBox x:Name="txtSearchClass" HorizontalAlignment="Left" Margin="638,258,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="142" RenderTransformOrigin="1.142,0.947" Height="28" TextChanged="txtSearchClass_TextChanged"/>
    </Grid>
</UserControl>
