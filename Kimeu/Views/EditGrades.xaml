<UserControl x:Class="sgs.Views.EditGrades"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sgs.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="WhiteSmoke" Margin="0,10,0,0">
        <Label Content="Edit Grades" HorizontalAlignment="Center" Margin="0,20,0,394"/>
        <DataGrid x:Name="dgEditGrades" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,220,280,95"/>
        <TextBox x:Name="txtTeacherName" Height="23" Width="244" HorizontalAlignment="Left" Margin="21,119,0,298" RenderTransformOrigin="0.521,-0.905"/>
        <Button x:Name="btnUpdateGrade" Content="Update" Height="23" Width="120" HorizontalAlignment="Right" Margin="0,221,120,196" Click="btnUpdateGrade_Click"/>
        <Button x:Name="btnDeleteGrade" Content="Delete" Height="23" Width="120" HorizontalAlignment="Right" Margin="0,220,120,20" Click="btnDeleteGrade_Click"/>

    </Grid>
</UserControl>
