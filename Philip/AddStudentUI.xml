<UserControl x:Class="sgs.Views.student"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sgs.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Aqua">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Add Student Info" HorizontalAlignment="Left" Margin="311,30,0,386" FontSize="20" Width="178" Grid.ColumnSpan="2"></TextBlock>
        <Label Content="First Name" FontSize="12" HorizontalAlignment="Left" Margin="114,73,0,0" VerticalAlignment="Top" FontWeight="Black" RenderTransformOrigin="1.163,0.501" Height="26" Width="74"/>
        <TextBox HorizontalAlignment="Left" Margin="114,104,0,0" TextWrapping="Wrap" TextAlignment="Center" Text=""  FontWeight="Black" VerticalAlignment="Top" Width="177" Padding="5,5" Height="24"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Margin="114,142,0,0" VerticalAlignment="Top" FontWeight="Black"  RenderTransformOrigin="0.026,0.116" Height="26" Width="72"/>
        <TextBox HorizontalAlignment="Left" Margin="114,173,0,0" TextWrapping="Wrap" Text="" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Top" Height="24" Width="177"/>
        <ComboBox  HorizontalAlignment="Left" Margin="348,106,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="2.283,-4.691" Height="22">
            <ComboBoxItem Content="Male"/>
            <ComboBoxItem Content="Female"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="348,175,0,0" VerticalAlignment="Top" Width="100" Height="22">
            <ComboBoxItem Content="Level One"/>
            <ComboBoxItem Content="Level Two"/>
            <ComboBoxItem Content="Level Three"/>
            <ComboBoxItem Content="Level Four"/>
            <ComboBoxItem Content="Level Five"/>
            <ComboBoxItem Content="Level Six"/>
        </ComboBox>
        <Button Content="Save Student" HorizontalAlignment="Left" Margin="114,210,0,0" VerticalAlignment="Top" Width="177" Height="20" RenderTransformOrigin="0.503,1.3"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2" Margin="10,263,10,10"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="159,225,0,-10" TextWrapping="Wrap" Text="Search by class" VerticalAlignment="Top" Width="181" Height="24"/>





    </Grid>
</UserControl>
