    <Grid >
        <StackPanel Margin="1,2,3,4" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" Grid.RowSpan="5" Background="white" RenderTransformOrigin="0.5,0.519">
            <TextBlock Text="Add Teacher's data" Foreground="#414141" Width="200" Margin="0,20 ,0 ,0" TextAlignment="Center" />


            <Border CornerRadius="100" Width="85" Height="85" Margin="15,20,20,10" Background="White">
                <Ellipse>
                    <Ellipse.Fill>
                        <ImageBrush Stretch="UniformToFill" ImageSource="../assets/icons/teacher.png"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Border>
            <TextBox Style="{DynamicResource TextBoxStyle2}"  x:Name="txtTeacherName" Width="200" Margin="0,0,0,10"
