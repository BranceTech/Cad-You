                     />
            <TextBox Style="{DynamicResource TextBoxStyle3}"  x:Name="txtTeacherLname" 
                    Width="200"
                     Height="30" 
                     Margin="0,10,0, 20 "
                     Padding="5,5"
                     TextAlignment="Center"/>
            <TextBox Style="{DynamicResource TextBoxStyle5}"  x:Name="txtTeacherTel" 
                    Width="200"
                     Height="30" 
                     Margin="0,10,0, 20 "
                     Padding="5,5"
                     TextAlignment="Center"/>
            <ComboBox Style="{DynamicResource cmBoxLeft}"  x:Name="cmbTeacherLevel">


                <ComboBoxItem Content="First"></ComboBoxItem>
                <ComboBoxItem Content="Second"></ComboBoxItem>
                <ComboBoxItem Content="Third"></ComboBoxItem>
                <ComboBoxItem Content="Fifth"></ComboBoxItem>
                <ComboBoxItem Content="sixth"></ComboBoxItem>
                <ComboBoxItem Content="Seventh"></ComboBoxItem>
                <ComboBoxItem Content="Eith"></ComboBoxItem>
            </ComboBox>
            <ComboBox Style="{DynamicResource cmBoxRight}" x:Name="cmbStudGender" VerticalAlignment="Center">
                <ComboBoxItem Content="Female"></ComboBoxItem>
                <ComboBoxItem Content="Male"></ComboBoxItem>
            </ComboBox>
            <Button x:Name="btnSaveTeacher" Content="Save"  
                    Width="200" 
                    Padding="8" 
                    Background="#a881af"
                    Click="saveStudentData_Clicked"
                    />
        </StackPanel>
    </Grid>
